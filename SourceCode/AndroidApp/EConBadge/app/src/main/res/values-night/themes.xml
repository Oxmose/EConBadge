<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EConBadge" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_800</item>
        <item name="colorPrimaryDark">@color/transparentBlack</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary" tools:ignore="PrivateResource">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary" tools:ignore="PrivateResource">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="actionBarSize">48dp</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorSurface">@color/grey_800</item>
        <item name="android:colorPrimary" tools:ignore="PrivateResource">@color/white</item>
        <item name="android:backgroundTint">@color/grey_800</item>
        <item name="android:colorAccent" tools:ignore="PrivateResource">@color/white</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

</resources>